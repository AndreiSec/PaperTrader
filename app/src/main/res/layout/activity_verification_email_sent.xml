<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.VerificationEmailSentActivity">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_verificationscreen_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:contentDescription="Simple back button on login screen"
        android:elevation="10dp"
        android:enabled="true"
        android:hapticFeedbackEnabled="true"
        android:scrollX="-5dp"
        app:backgroundTint="@color/lightBlue"
        app:borderWidth="1dp"
        app:fabSize="mini"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24"
        app:tint='@color/lightBlue' />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_logo_emailverification"
        android:layout_width="165dp"
        android:layout_height="125dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:innerRadius="0dp"
        android:shape="rectangle"
        app:cardBackgroundColor="@color/darkBlue"
        app:cardCornerRadius="50dp"
        app:contentPadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/darkBlue"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/logo_emailverification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:scaleX="1.2"
            android:scaleY="1.2"
            app:srcCompat="@mipmap/logo_light_foreground" />
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="260dp"
        android:layout_height="246dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@mipmap/graph_foreground" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/gotham_rounded_bold"
        android:text="@string/verification_sent_main"
        android:textColor="@color/darkBlue"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_logo_emailverification" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="287dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gotham_rounded_book"
        android:text="@string/verification_sent_body"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />




</androidx.constraintlayout.widget.ConstraintLayout>
